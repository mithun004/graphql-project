type Book {

    id: ID!
    author: String
    title: String
    description: String
    pages: Int
    price: Float
    publisher: String

}

type Mutation {

    createBook(book:BookInput) : Book
    updateBook(book: BookInput) : Book
    deleteBook(bookId : Int) : Boolean


}


type Query {
    allBooks : [Book]
    getBookById(bookId:Int ) : Book
}


input BookInput {

    author: String
    title: String
    description: String
    pages: Int
    price: Float
    publisher: String

}